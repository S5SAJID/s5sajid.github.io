<div class="grid-overlay"></div>
<div class="fixed bottom-6 right-6 z-50 flex items-center gap-2">
    <span class="text-xs">GRID</span>
    <button id="gridToggle" class="toggle-switch relative"></button>
</div>

<script>
    const gridToggle = document.getElementById('gridToggle') as HTMLElement;
    const gridOverlay = document.querySelector('.grid-overlay') as HTMLElement;
    
    gridToggle.addEventListener('click', () => {
        gridToggle.classList.toggle('toggle-on');
        gridOverlay.classList.toggle('grid-visible');
    });
</script>

<style>
    .grid-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: repeating-linear-gradient(0deg, transparent, transparent 23px, rgba(0,0,0,0.03) 23px, rgba(0,0,0,0.03) 24px),
                    repeating-linear-gradient(90deg, transparent, transparent 23px, rgba(0,0,0,0.03) 23px, rgba(0,0,0,0.03) 24px);
        pointer-events: none;
        z-index: -1;
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    .grid-visible {
        opacity: 1;
    }
    
    .toggle-switch {
        width: 50px;
        height: 24px;
        border: 1px solid #000;
    }
    
    .toggle-switch::after {
        content: '';
        position: absolute;
        top: 2px;
        left: 2px;
        width: 18px;
        height: 18px;
        background-color: #000;
        transition: transform 0.3s ease;
    }
    
    .toggle-on::after {
        transform: translateX(26px);
    }
</style>
